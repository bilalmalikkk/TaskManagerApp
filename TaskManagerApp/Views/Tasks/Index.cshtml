@model IEnumerable<TaskManagerApp.Models.TaskItem>
@{
    ViewBag.Title = "My Tasks";
}

<h2>My Tasks</h2>
<a class="btn btn-primary mb-3" href="/Tasks/Create">Create New Task</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.Status</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Task/Edit/@task.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Task/Delete/@task.Id">Delete</a>
                    <a class="btn btn-sm btn-info" href="/Task/Details/@task.Id">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
